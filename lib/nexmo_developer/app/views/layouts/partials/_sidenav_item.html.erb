<li class='navigation-item--<%= sidenav_item.title %> navigation-item' role="none">
  <% if sidenav_item.label? %>
    <%= link_to(sidenav_item.label, sidenav_item.link_url, class: "#{sidenav_item.css_classes}", role: 'link') %>
  <% end %>
  <a href="#" class='Vlt-sidemenu__trigger' role="link" tabindex="<%= sidenav_item_counter.zero? && 0 %>" aria-haspopup="true" aria-expanded="false" <%= sidenav_item_counter.zero? && "id=sidenav-first" %>>
    <% if sidenav_item.svg? %>
      <svg class='<%= sidenav_item.svg_color %>'><use xlink:href='<%= sidenav_item.svg %>' /></svg>
    <% end %>
    <span class='Vlt-sidemenu__label'>
      <%= sidenav_item.normalized_title %>
    </span>
  </a>
  <% if sidenav_item.children.any? %>
    <ul role="menu" aria-label="<%= sidenav_item.normalized_title %>">
      <%= render partial: 'layouts/partials/sidenav_subitem', collection: sidenav_item.children %>
    </ul>
  <% end %>
</li>
