<%= link_to '<< Back to Blogs', blog_path %>

<hr>

<p 
  style="
    text-opacity: 1;
    color: rgba(107,114,128,.6);
    text-align: right;"
>
  <%= @content.reading_time format: :approx %> read
</p>


<div style="display:flex;justify-content: space-between;">

  <div class="Vlt-card Vlt-bg-white" style="width:20%;height: fit-content;">
      

      <% if @author['image_url'] %>
        <% if @author['image_url'].include? 'gravatar' %>
          <% url = @author['image_url'] %>
        <% else %>
          <% url = "https://d226lax1qjow5r.cloudfront.net/blog/authors/#{@author['image_url'].gsub('/content/images/','')}" %>
        <% end %>
      <% end %>

      <div class="Vlt-card__image" style="background-image: url('<%= url %>'); background-size: cover; min-height: 25vh;"></div>

      
      <div class="Vlt-card__content">
        <%= @author["name"] %>
      </div>
  </div>

  <div class="Vlt-card Vlt-bg-white" style="width:78%;">
    <div class="Vlt-card__content">
      <%= raw @content %>
    </div>
  </div>

</div>